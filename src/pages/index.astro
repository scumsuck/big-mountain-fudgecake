---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "BMF UNOFFICIAL FANSITE";

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));

---
<BaseLayout pageTitle={pageTitle}>

<img src="/img/john-redcorn-productions-88x31.gif" alt="John Redcorn Productions gif with his hair blowing">
Welcome to the UNOFFICIAL fansite for BIG MOUNTAIN FUDGECAKE.  We will goon about John Redcorn here with images, writing, and other forms of worship.
<h2>Updates:</h2>
<ol>
      {allPosts.map((post: any) => <li><a href={post.url}>[{post.frontmatter.pubDate.toString().slice(0,10)}] - {post.frontmatter.title} </a></li>)}
</ol>


</BaseLayout>